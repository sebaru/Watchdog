## Allows the user watchdog to execute these commands
watchdog  ALL=(ALL) NOPASSWD: /usr/sbin/poweroff
watchdog  ALL=(ALL) NOPASSWD: /usr/bin/make install
watchdog  ALL=(ALL) NOPASSWD: /usr/bin/systemctl stop Watchdogd
watchdog  ALL=(ALL) NOPASSWD: /usr/bin/systemctl start Watchdogd
watchdog  ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart Watchdogd
Defaults:watchdog !requiretty
